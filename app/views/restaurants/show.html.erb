<div class="container">
<h2><%@restaurant.name %></h2>
  <ul>
    <li>Address: <%= @restaurant.address %></li>
    <li>Category: <%= @restaurant.category %></li>
    <li>Phone Number: <%= @restaurant.phone_number %></li>
  </ul>
  <ul>
    <% @restaurant.reviews.each do |review|  %>
      <li>Rating: <%= review.rating %></li>
      <li>Comment: <%= review.content %></li>
    <% end  %>
  </ul>
  <h3><%= link_to "back", restaurants_path %></h3>
  <h3><%= link_to "add review", new_restaurant_review_path(@restaurant) %></h3>
</div>
